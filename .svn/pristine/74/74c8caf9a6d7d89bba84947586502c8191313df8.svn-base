                   $('#imgshow').append("<div row="+i+" style=\'float:left;width:70px;height:70px;margin-left:5px;margin-top:5px\'><img index=\'"+ i +"\' src=\'" + localId +"\' data-preview-src=\"\" data-preview-group=\'1\' class=\'imgDesc\'><a onclick=\"delimg(" + i + ")\" style=\'color:#fff;font-size:23px;position:relative;top:-68px;left:2px;display:inline-block;height:16px;width:16px;text-align: center;background-color:red;border-radius:8px;\'><span class=\"mui-icon mui-icon-closeempty\"  style=\'position: relative;top: -4px;left: -4px;\'></span></a><span class=\"mui-icon mui-icon-gear-filled\" onclick=\"setimg(" + i + ")\" style=\'color:#3892E0;font-size:21px;position:relative;top:-74px;left:29px;\'></span></div>");
                   i++;
                 
                }
              });
              
          };

          function setimg(index){
            var imgUrl=$('#imgshow').find('img[index='+index+']').attr('src');
            var btnArray = ['否', '是'];
            mui.confirm('确定设置'+ imgUrl +'为商品缩略图？', '设置', btnArray, function(e) {
              if (e.index == 1) {
                alert('修改成功');
              } else {
                alert('关闭');
              }
            });
          }

          function delimg(index){
            var imgUrl=$('#imgshow').find('img[index='+index+']').attr('src');
            var btnArray = ['否', '是'];
            mui.confirm('确定刪除'+ imgUrl +'图？', '设置', btnArray, function(e) {
              if (e.index == 1) {
                $('#imgshow').find('div[row='+index+']').remove();
                alert('刪除成功');
              } else {
                alert('关闭');
              }
            });
          }

          function saveGoods(){
            if($("#goodName").val()==''){
              mui.alert('商品名称不能为空！', '提示');
              return;
            }
            if($("#goodAttr").val()==''){
              mui.alert('商品属性不能为空！', '提示');
              return;
            }
            if($("#goodPurchase").val()==''){
              mui.alert('商品进货价不能为空！', '提示');
              return;
            }
            if($("#textarea").val()==''){
              mui.alert('商品描述不能为空！', '提示');
              return;
            }
            else{
              mui.alert('保存成功');
            }
             
