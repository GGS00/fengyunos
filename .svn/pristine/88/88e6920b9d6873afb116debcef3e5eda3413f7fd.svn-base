<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>云享</title>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <!-- <link href="//cdn.bootcss.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="css/font-awesome.css">
    <link rel="stylesheet" href="css/mui.min.css">
    <link rel="stylesheet" href="css/main.css">    
    <style>

    body{
      font-family: "微软雅黑";
    }

    .mui-content{
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          height: 100%;
          background: url(img/yun3.png);
          margin:0px; padding:0px;
          background-size:cover; 
          /* background: -webkit-linear-gradient(#397178, #E7E4E0); */
    }

    #loginZoonID{
          position: absolute;
          top: -22%;
          left: 10%;
          width: 80%;
          text-align: center;
          padding: 2%;
          opacity: 0.7;
          transition:top 2s;
          -moz-transition:top 2s; /* Firefox 4 */
          -webkit-transition:top 2s; /* Safari and Chrome */
          -o-transition:top 2s; /* Opera */
          -ms-transition:top 2s; 
    }

    #Id_shopIco{
          width: 72%;
          border: 0;
    }

    #shareDesc{
          width: 68%;
          border: 0;
    }



    .shade{
          height: 100%;
          width: 100%;
          position: absolute;
          background: #000;
          opacity: 0.5;
    }

    #shareText{

          position: fixed;
          bottom: -6%;
          left: 10%;
          width: 80%;
          text-align: center;
          padding: 2%;
          opacity: 0.7;
          transition:bottom 2s;
          -moz-transition:bottom 2s; /* Firefox 4 */
          -webkit-transition:bottom 2s; /* Safari and Chrome */
          -o-transition:bottom 2s; /* Opera */
          -ms-transition:bottom 2s; 

    }

    .jiantou{
          width: 21px;
          position: fixed;
          right: -6%;
          bottom: 3%;
          color: #CBCBCB;
          font-size: 23px;
          transition:right 3s;
          -moz-transition:right 3s; /* Firefox 4 */
          -webkit-transition:right 3s; /* Safari and Chrome */
          -o-transition:right 3s; /* Opera */
          -ms-transition:right 3s; 
    }
 
    </style>
</head>
<body class="mui-ios mui-ios-9 mui-ios-9-1">


  <div class="mui-content">
       <div class="shade">
          

       </div>

       <div class="login-input-zoon" id="loginZoonID" >
        <img id="Id_shopIco" src="img/yunxiang3.png">                  
       </div>
       
       <div class="login-input-zoon" id="shareText" >
        <img id="shareDesc" src="img/shareText.png">                  
       </div>

       <div class="jiantou" onclick="toIndex()">
         <i class="fa fa-angle-double-right"></i>
       </div>

  </div>


<script src="http://cdn.bootcss.com/jquery/2.2.0/jquery.min.js"></script>
<script src="js/mui.min.js"></script>
<script type="text/javascript">
  mui.init();
  mui('#scroll').scroll({
          indicators: true //是否显示滚动条
      });

  $("#loginZoonID").css("top","12%");

  $("#shareText").css("bottom","1%");
  
  $(".jiantou").css("right","2%");

  /*setTimeout(function initial(){
    window.location.href="index.html";
  }, 3000);*/
  function toIndex(){

    window.location.href="index.html";

  }
 
  





</script>
</body>
</html>
