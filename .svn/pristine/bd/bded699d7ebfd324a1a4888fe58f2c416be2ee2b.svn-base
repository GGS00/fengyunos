         });
*/
      mui.previewImage();
      
      wx.config({
            appId: '<?php echo $signPackage["appId"]; ?>',
            timestamp: '<?php echo $signPackage["timestamp"]; ?>',
            nonceStr: '<?php echo $signPackage["nonceStr"]; ?>',
            signature: '<?php echo $signPackage["signature"]; ?>',
            jsApiList: [
                // 所有要调用的 API 都要加到这个列表中
                'getLocation',
                'chooseImage',
                'uploadImage',
                'downloadImage',
                'hideAllNonBaseMenuItem'
            ]
      });
          var images = { 
                  localId: [], 
                  serverId: [] 
             };
          var i = 0;

            $('#filePicker').on('click',function () {
              var imgcount = $('#imgshow').children('img').size();
              if(imgcount==5){
                mui.alert('不能上传超过五张', '提示');
              }else{
                 wx.chooseImage({
                  success: function (res) {
                   var localIds = res.localIds;
                   if((localIds.length>0) && (localIds.length<=5)){
                       syncUpload(localIds);
                   }else{
                       mui.alert('不能上传超过五张', '提示');
                   }
                  }
                 });
               }                
              });
          
          var syncUpload = function(localIds){
                /* alert(localIds);*/
                 var localId = localIds.pop();
                 wx.uploadImage({
                  localId: localId,
                  isShowProgressTips: 1,
                  success: function (res) {
                    
                   var serverId = res.serverId; // 返回图片的服务器端ID
                   //其他对serverId做处理的代码
                   if(localIds.length>0){
                    syncUpload(localIds);
                   }
                   /*alert(serverId);*/
                   downImg(serverId);
                  }
                 });
                };
              
          var downImg = function(serverId){
             if(i>0){
              $("#imgIntro").show();
             }
              if(i==5){
                mui.alert('不能上传超过五张', '提示');
              }else{
                alert(serverId);
                wx.downloadImage({
                serverId: serverId,
                success: function (res) {
                  var localId = res.localId;
                   $('#imgshow').append("<div style=\'width:50px;height:50px\'><img index=\'"+ i +"\' src=\'" + localId +"\' data-preview-src=\"\" data-preview-group=\'1\' class=\'imgDesc\' style=\'margin-left:5px\'><span class=\"mui-icon mui-icon-gear-filled\" onclick=\"setimg(" + i + ")\" style=\'color:#8F8F94;font-size:18px;position:relative;top:-42px;left:28px;\'></span></div>");
                   i++;
                }
              });
              }
          };

          function setimg(index){
            /*alert(index);*/
            var imgUrl=$('#imgshow').find('img[index='+index+']').attr('src');
            var btnArray = ['否', '是'];
            alert(imgUrl);
            mui.confirm('确定设置'+ imgUrl +'为商品缩略图？', '设置', btnArray, function(e) {
              if (e.index == 1) {
                alert('修改成功');
              } else {
                alert('关闭');
              }
            });
          }

          function saveGoods(){
            if($("#goodName").val()==''){
              mui.alert('商品名称不能为空！', '提示');
            }
            if($("#goodAttr").val()==''){
              mui.alert('商品属性不能为空！', '提示');
            }
            if($("#goodPurchase").val()==''){
              mui.alert('商品进货价不能为空！', '提示');
            }
            if($("#textarea").val()==''){
              mui.alert('商品描述不能为空！', '提示');
            }
            else{
              mui.alert('保存成功');
            }
             
          }
        
